{
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src/",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
